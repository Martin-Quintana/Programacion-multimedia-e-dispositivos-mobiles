<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Titulo del contenido -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saludo"
        android:textSize="@dimen/txt_titulo"
        android:textColor="@color/red"/>

    <!-- Botón Ajustado a contenido -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn1"/>
    <!-- Botón dimensionando en Pixels: ERROR -->
    <Button
        android:layout_width="120px"
        android:layout_height="60px"
        android:text="@string/txt_btn2"/>
    <!-- Botón dimensionado a dip=dp -->
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/txt_btn3"/>
    <!-- Botón dimensionado al ancho -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn4"/>
    <!-- Botón dimensionado a la altura del dispositivo -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/txt_btn5"/>

</LinearLayout>