<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estamos en ACTIVITY 1" />

    <Button
        android:id="@+id/btnLlamadaActivity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a ACTIVITY 2" />

    <Button
        android:id="@+id/btnLlamadaActivity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a ACTIVITY 3 + Datos" />

    <Button
        android:id="@+id/btnLlamadaActivity4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a ACTIVITY 4 + Bundle" />

    <Button
        android:id="@+id/btnLlamadaActivity5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a ACTIVITY 5 + respuesta" />

    <Button
        android:id="@+id/btnLlamadaActivity6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a ACTIVITY 6 + respuesta" />

    <Button
        android:id="@+id/btnLlamadaActivityOtraApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a otra App" />

    <Button
        android:id="@+id/btnLlamadaActivityOtraAppSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn"
        android:text="Llamada a otra App del propio sistema" />

    <TextView
        android:id="@+id/txtRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textStyle="bold" />

</LinearLayout>